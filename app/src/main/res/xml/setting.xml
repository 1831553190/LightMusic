<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:title="进度条流畅性"
        android:key="level"
        android:dialogTitle="进度条流畅性"
        android:entries="@array/PLevel"
        android:entryValues="@array/PLevel_value"
        android:defaultValue="100"
        android:summary="改变进度条的刷新率，刷新率越快可能会导致设备加速耗电"/>
    <ListPreference
        android:key="themed"
        android:summary="切换夜间模式（可能需要重启应用后生效）"
        android:title="夜间模式"
        android:defaultValue="auto"
        android:entries="@array/theme"
        android:entryValues="@array/themes"
        />

    <CheckBoxPreference
        android:key="detachVol"
        android:summary="单独的播放音量大小,只能在应用内调节"
        android:title="单独音量" />

    <CheckBoxPreference
        android:key="showCircleView"
        android:defaultValue="false"
        android:enabled="false"
        android:summary="切换播放界面的专辑图"
        android:title="使用圆形专辑图" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="showProgress"
        android:summary="在主界面的底部播放栏显示播放进度(可能会加速耗电)"
        android:title="底部播放栏显示进度" />
<!--    <CheckBoxPreference-->
<!--        android:defaultValue="false"-->
<!--        android:key="bottomMode"-->
<!--        android:summary="在主界面的底部播放栏显示播放进度(可能会加速耗电)"-->
<!--        android:title="底部播放栏显示进度" />-->
    <CheckBoxPreference
        android:key="showBlru"
        android:defaultValue="false"
        android:summary="播放界面使用"
        android:title="高斯模糊" />



</PreferenceScreen>